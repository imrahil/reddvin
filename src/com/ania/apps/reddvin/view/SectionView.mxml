<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Front page">

	<fx:Script>
		<![CDATA[
			import com.ania.apps.reddvin.constants.ApplicationConstants;
			
			import org.osflash.signals.Signal;
			
			public var menuButtonClicked:Signal = new Signal(Button);
			public var sortChanged:Signal = new Signal(String);
			
			[Bindable]
			private var selectedSort:String = "what's hot";
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="portrait"/>
		<s:State name="landscape"/>
	</s:states>
	
	<s:navigationContent.portrait>
		<s:Button id="menuButton" icon="@Embed('/assets/images/spanner32.png')" click="menuButtonClicked.dispatch(menuButton)"/>
	</s:navigationContent.portrait>
	
	<s:actionContent>
		<s:CalloutButton id="calloutBtn" label="sort: {selectedSort}" verticalPosition="after" close="sortChanged.dispatch(sortList.selectedItem)">
			<s:calloutLayout>
				<s:VerticalLayout paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" horizontalAlign="center" gap="5"/>
			</s:calloutLayout>
			<s:calloutContent>
				<s:List id="sortList" dataProvider="{ApplicationConstants.SORT_ORDER}" selectedIndex="0" width="100%" height="100%" change="calloutBtn.callout.close(); selectedSort = sortList.selectedItem">
					<s:layout>
						<s:VerticalLayout requestedRowCount="4" gap="0" horizontalAlign="contentJustify" />
					</s:layout>
				</s:List>
				<s:Button label="Cancel" click="calloutBtn.callout.close()" />
			</s:calloutContent>
			
		</s:CalloutButton>
	</s:actionContent>

	<s:List id="sectionList" width="100%" height="100%" labelField="title" itemRenderer="com.ania.apps.reddvin.view.components.SectionIconItemRenderer" />
	
	<s:Group left="0" right="0" top="0" bottom="0">
		<s:BusyIndicator id="busyIndicator" horizontalCenter="0" verticalCenter="0" symbolColor="#666666" rotationInterval="50" visible="false"/>
	</s:Group>
</s:View>
